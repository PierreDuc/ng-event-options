  "name": "ng-event-options",
  "description": "Enable event options (capture, passive, ...) inside angular templates",
  "main": "index.js",
  "version": "1.0.1",
  "license": "MIT",
  "typings": "index.d.ts",
  "engines": {
    "node": ">= 5.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:PierreDuc/ng-event-options.git"
  },
  "homepage": "https://github.com/PierreDuc/ng-event-options/",
  "bugs": {
    "url": "https://github.com/PierreDuc/ts-method-cache/issues"
  },
  "keywords": [
    "angular",
    "angular2",
    "angular4",
    "angular5",
    "event",
    "eventoptions",
    "passive",
    "capture",
    "bubble",
    "propagation"
  ],
  "scripts": {
    "visual": "ng serve -p=4242 --prod",
    "build": "npm run cleanup && npm run generate && npm run compile && npm run bundling && npm run minify && npm run copy",
    "cleanup": "rimraf dist",
    "bundling": "rollup -c",
    "generate": "node generate",
    "compile": "ngc -p ./tsconfig.json",
    "minify": "uglifyjs dist/bundles/ng-event-options.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ng-event-options.umd.min.js",
    "copy": "copyfiles LICENSE README.md package.json dist",
    "publish-to-npm": "cd dist && npm publish"
  },
