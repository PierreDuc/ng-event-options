    "protractor": "~5.1.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.49.3",
    "rxjs": ">=5.4.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
    "typescript": ">=2.5.2",
    "uglify-js": "^3.1.0",
    "zone.js": ">=0.8.14"
